{
  "name": "vue3-webpack-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "webpack serve --env APP_ENV=development --mode development --config webpack.config.ts",
    "build": "webpack --env APP_ENV=production --mode production --config webpack.config.ts",
    "dev:micro": "pnpm --filter micro-example dev",
    "build:micro": "pnpm --filter micro-example build",
    "build:all": "pnpm -r --include-workspace-root run build",
    "build:preview": "webpack --env APP_ENV=preview --mode production --config webpack.config.ts",
    "preview": "pnpm run build:preview && npx serve public/apps/ROOT -p 4000",
    "preview:micro": "npx serve public/apps/micro -p 4001",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.vue,.js,.jsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.vue,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm run type-check && pnpm run lint && pnpm run format:check"
  },
  "dependencies": {
    "consola": "^3.4.2",
    "core-js": "^3.8.3",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/babel__core": "^7.20.5",
    "@types/node": "^20.10.0",
    "@types/prettier": "^3.0.0",
    "@types/vue": "^2.0.0",
    "@types/webpack": "^5.28.5",
    "@types/webpack-dev-server": "^4.7.2",
    "@types/webpack-env": "^1.18.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vue/compiler-sfc": "^3.2.13",
    "babel-loader": "^9.1.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^7.0.4",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.18.1",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.9.4",
    "prettier": "^3.1.0",
    "style-loader": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "vue-loader": "^17.3.1",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpackbar": "^7.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  }
}
