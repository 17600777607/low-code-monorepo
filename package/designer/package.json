{
  "name": "LowCode/designer",
  "version": "1.0.0",
  "description": "设计器 - 低代码平台",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development --port 5003",
    "dev:test": "vite --mode test --port 5003",
    "dev:production": "vite --mode production --port 5003",
    "build:development": "vue-tsc -b && vite build --mode development",
    "build:test": "vue-tsc -b && vite build --mode test",
    "preview": "vite preview --port 6003",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,json,css,scss,md}\""
  }
}
