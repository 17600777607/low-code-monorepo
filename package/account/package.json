{
  "name": "LowCode/account",
  "version": "1.0.0",
  "description": "账号中心 - 统一登录、注册、找回密码等功能",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development --port 5001",
    "dev:test": "vite --mode test --port 5001",
    "dev:production": "vite --mode production --port 5001",
    "build:development": "vue-tsc -b && vite build --mode development",
    "build:test": "vue-tsc -b && vite build --mode test",
    "build:production": "vue-tsc -b && vite build --mode production",
    "preview": "vite preview --port 6001",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,json,css,scss,md}\""
  }
}
