{
  "compilerOptions": {
    // 目标 JavaScript 版本
    "target": "ES2020",
    // 使用的模块系统
    "module": "ESNext",
    // 严格模式选项
    "strict": true,
    // 启用 JSX 支持
    "jsx": "preserve",
    // 模块解析策略
    "moduleResolution": "bundler",
    // 跳过库文件的类型检查
    "skipLibCheck": true,
    // 允许导入 .json 文件
    "resolveJsonModule": true,
    // 允许从没有默认导出的模块中默认导入
    "allowSyntheticDefaultImports": true,
    // 启用所有严格类型检查选项
    "esModuleInterop": true,
    // 生成源映射文件
    "sourceMap": true,
    // 基础路径
    "baseUrl": ".",
    // 类型声明文件
    "types": ["node"],
    // 路径映射
    "paths": {
      "@/*": ["src/*"]
    },
    // 包含的库文件
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  // 包含的文件
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "*.ts", "*.config.ts"],
  // 排除的文件
  "exclude": ["node_modules", "dist"]
}
